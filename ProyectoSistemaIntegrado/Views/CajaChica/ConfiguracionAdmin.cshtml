@using Microsoft.AspNetCore.Http;
@{
    Context.Session.SetString("tituloPrincipal", "Configuración de Cajas Chicas (Admin)");
}


<button type="button" id="ShowPopupEdicionConfig" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdropEdicionConfig" style="display:none">
</button>

<div style="height: 15px; width:100%;"></div>
<div id="divTabla">

</div>

<div style="height: 15px; width:100%;"></div>
<div id="divTablaMovimiento">

</div>

<!-- Modal Disponible -->
<div class="modal fade" id="staticBackdropEdicionConfig" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabelEdicionConfig" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="uiTitlePopupEdicionConfig"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="uiClosePopupEdicionConfig">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post" id="frmConfiguracionCajaChica">
                    <input type="hidden" name="CodigoCajaChica" class="form-control obligatorio" id="uiCodigoCajaChica" readonly style="text-align:center" />
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Nombre:</label>
                        <div class="col-sm-10">
                            <input type="text" name="NombreCajaChica" class="form-control obligatorio" id="uiNombreCajaChica" readonly />
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Límite Asignado:</label>
                        <div class="col-sm-3">
                            <input type="text" name="MontoLimite" class="form-control obligatorio decimal-2" id="uiMontoLimite" style="text-align:right" />
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Saldo Disponible:</label>
                        <div class="col-sm-3">
                            <input type="text" name="MontoDisponible" class="form-control obligatorio decimal-2" id="uiMontoDisponible" style="text-align:right" />
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Observaciones:</label>
                        <div class="col-sm-10">
                            <textarea name="Observaciones" class="form-control" id="uiObservaciones" placeholder="Observaciones"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="ActualizarConfigCajasChicasAdmin()">Actualizar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/datatable.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/jqueryui.js"></script>
    <script src="~/js/sweetalert.js"></script>
    <script src="~/js/generic.js"></script>
    <script src="~/js/cajachica.js"></script>
}
