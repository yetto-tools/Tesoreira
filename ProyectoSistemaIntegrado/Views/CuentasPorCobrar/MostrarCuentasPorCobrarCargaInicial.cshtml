@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@{
    ViewData["Title"] = "Create";
    Context.Session.SetString("tituloPrincipal", "Listado de Cuentas Por Cobrar (Carga Inicial)");
}

<button type="button" id="ShowPopupCargaSaldosIniciales" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdropCargaSaldosIniciales" style="display:none;">Cargar Saldos Iniciales</button>
<div style="margin: 0 auto; text-align: center;">
    <input type="button" class="btn btn-success" value="Agregar" onclick="location.href='@Url.Action("NewCargaInicial", "CuentasPorCobrar")'" />
    <button type="button" class="btn btn-primary" onclick="fillCargaSaldosIniciales()">Cargar Saldos Iniciales</button>
</div>

<div id="divTabla">


</div>

<!-- Modal Datos Carga Inicial -->
<div class="modal fade" id="staticBackdropCargaSaldosIniciales" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabelCargaSaldosIniciales" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="uiTitlePopupCargaSaldosIniciales"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="uiClosePopupCargaSaldosIniciales">&times;</button>
            </div>
            <div class="modal-body">

                <form method="post" id="frmCargaInicialSaldos">
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Año:</label>
                        <div class="col-sm-4">
                            <select class="form-control obligatorio" name="AnioOperacion" id="uiAnioAperacion" onchange="fillSemanasAnteriores(this)">
                                <option value="2022">2022</option>
                                <option value="2021">2021</option>
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Semana:</label>
                        <div class="col-sm-10">
                            <select class="form-control obligatorio" name="SemanaOperacion" id="uiNumeroSemanaOperacion">
                            </select>
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="CargarSaldosIniciales()">Cargar Saldos Iniciales</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/datatable.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/jqueryui.js"></script>
    <script src="~/js/sweetalert.js"></script>
    <script src="~/js/generic.js"></script>
    <script src="~/js/cxc.js"></script>
}