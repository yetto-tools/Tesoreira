@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@using CapaEntidad.Administracion;
@{


    ViewData["Title"] = "Create";
    string cadena = Context.Session.GetString("usuario");
    UsuarioCLS objUsuario = JsonConvert.DeserializeObject<UsuarioCLS>(cadena);
    string idUsuario = objUsuario.IdUsuario;
    Context.Session.SetString("tituloPrincipal", "Asignación de Operación Contable");
}

<button type="button" id="ShowPopupEditConfiguracion" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdropEditConfiguracion" style="display:none;">
</button>

<table style="margin-left: auto; margin-right: auto;">
    <tr>
        <td>CATEGORIA</td>
        <td></td>
    </tr>
    <tr>
        <td>
            <select class="form-control" id="uiFiltroCodigoCategoriaEntidad" name="CodigoCategoriaEntidad">
            </select>
        </td>
        <td>
            <input type="button" class="form-control btn btn-primary" value="BUSCAR" onclick="FiltrarEntidades()" />
        </td>
    </tr>
</table>

<div style="height: 25px; width:100%;"></div>
<div id="divTabla">
</div>


<!-- Modal Editar configuración -->
<div class="modal fade" id="staticBackdropEditConfiguracion" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabelEditConfiguracion" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="uiTitlePopupEditConfiguracion"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="uiClosePopupEditConfiguracion">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post" id="frmEditConfiguracion">
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Código Entidad:</label>
                        <div class="col-sm-5">
                            <input type="text" class="form-control" name="CodigoEntidad" id="uiEditCodigoEntidad" readonly />
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Nombre Entidad:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Nombre" id="uiEditNombreEntidad" readonly />
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Categoría:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="NombreCategoriaEntidad" id="uiEditNombreCategoriaEntidad" readonly />
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Opcion:</label>
                        <div class="col-sm-6">
                            <select class="form-control obligatorio" name="CodigoOperacion" id="uiEditCodigoOperacion">
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="ActualizarConfiguracionEntidad()">Actualizar</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/datatable.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/sweetalert.js"></script>
    <script src="~/js/generic.js"></script>
    <script src="~/js/entidad.js"></script>
}