@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@{
    ViewData["Title"] = "Create";
    Context.Session.SetString("tituloPrincipal", "Pagos y Decuentos en Planilla");
}

<button type="button" id="ShowPopupAbonoPrestamo" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdropAbonoPrestamo" style="display:none">
</button>

<div style="height: 10px; width:100%;">
</div>
<div id="divTabla">
</div>

<!-- Modal Data Descuento -->
<div class="modal fade" id="staticBackdropAbonoPrestamo" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabelAbonoPrestamo" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="uiTitlePopupAbonoPrestamo"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="uiClosePopupAbonoPrestamo">&times;</button>
            </div>
            <div class="modal-body">

                <form method="post" id="frmAbonoPrestamo">
                    <input type="hidden" name="CodigoEmpresa" class="form-control obligatorio" id="uiCodigoEmpresa" readonly />
                    <input type="hidden" name="CodigoOperacion" class="form-control obligatorio" id="uiCodigoOperacion" readonly />
                    <input type="hidden" name="CodigoCategoria" class="form-control obligatorio" id="uiCodigoCategoria" readonly />
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Empresa:</label>
                        <div class="col-sm-10">
                            <input type="text" name="NombreEmpresa" class="form-control" id="uiNombreEmpresa" readonly />
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Código:</label>
                        <div class="col-sm-10">
                            <input type="text" name="CodigoEmpleado" class="form-control obligatorio" id="uiCodigoEmpleado" readonly />
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Nombre:</label>
                        <div class="col-sm-10">
                            <input type="text" name="NombreEmpleado" class="form-control obligatorio" id="uiNombreEmpleado" readonly />
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Monto:</label>
                        <div class="col-sm-10">
                            <input type="text" name="Monto" class="form-control obligatorio" id="uiMonto" />
                        </div>
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="GuardarAbonoPrestamoEnCxC()">Aceptar</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/datatable.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/sweetalert.js"></script>
    <script src="~/js/generic.js"></script>
    <script src="~/js/planilla.js"></script>
}

