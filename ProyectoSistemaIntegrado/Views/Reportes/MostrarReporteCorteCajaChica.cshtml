@using Microsoft.AspNetCore.Http;
@{
    Context.Session.SetString("tituloPrincipal", "Listado de Reportes");
}

<a href="@Url.Content("~")" id="uiExportarExcel" style="display:none;">Exportar Excel</a>

<button type="button" class="btn btn-outline-success" onclick="Redireccionar('Reportes', 'Index')">
    <i class="bi bi-arrow-left-circle">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
        </svg>
    </i>
    Regresar
</button>

<form method="post" id="frmBusquedaCortesCajaChica" name="frmBusqueda">
    <table style="margin-left: auto; margin-right: auto;">
        <tr>
            <td>Caja Chica</td>
            <td>Año</td>
            <td></td>
        </tr>
        <tr>
            <td>
                <select class="form-control" id="uiFiltroCajaChica" name="CodigoCajaChica">
                </select>
            </td>
            <td>
                <input type="text" name="AnioOperacion" class="form-control solonumeros-opcional text-center" id="uiFiltroAnioOperacion" placeholder="Año" />
            </td>
            <td>
                <input type="button" class="form-control btn btn-primary" value="BUSCAR" onclick="buscarReporteCortesCajaChica()" />
            </td>
        </tr>
    </table>
</form>
    
<div style="height: 15px; width:100%;"></div>

<div id="divTabla">

</div>

@section Scripts {
    <script src="~/js/datatable.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/sweetalert.js"></script>
    <script src="~/js/generic.js"></script>
    <script src="~/js/reportes.js"></script>
}
