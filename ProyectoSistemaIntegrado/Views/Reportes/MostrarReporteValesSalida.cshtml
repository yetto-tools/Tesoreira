@using Microsoft.AspNetCore.Http;
@{
    Context.Session.SetString("tituloPrincipal", "Reporte de Vales de Salida");
}

<button type="button" class="btn btn-outline-success" onclick="Redireccionar('Reportes', 'Index')">
    <i class="bi bi-arrow-left-circle">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-arrow-left-circle" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-4.5-.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z" />
        </svg>
    </i>
    Regresar
</button>

<div style="height: 15px; width:100%;">

</div>

<form method="post" id="frmBusqueda">
    <table style="margin-left: auto; margin-right: auto;">
        <tr>
            <td>EMPRESA</td>
            <td>FECHA INICIO</td>
            <td>FECHA FIN</td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td>
                <select class="form-control" id="uiFiltroEmpresa" name="CodigoEmpresa">
                </select>
            </td>
            <td>
                <input type="text" name="FechaInicio" class="form-control text-center obligatorio" id="uiFechaInicio" placeholder="Fecha Inicio" />
            </td>
            <td>
                <input type="text" name="FechaFin" class="form-control text-center obligatorio" id="uiFechaFin" placeholder="Fecha Fin" />
            </td>
            <td>
                <input type="button" class="form-control btn btn-primary" value="BUSCAR" onclick="mostrarValesDeSalida()" />
            </td>
            <td>
                <button type="button" onclick="generarExcelValesSalida()" class="btn btn-success">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-excel" viewBox="0 0 16 16">
                        <path d="M5.18 4.616a.5.5 0 0 1 .704.064L8 7.219l2.116-2.54a.5.5 0 1 1 .768.641L8.651 8l2.233 2.68a.5.5 0 0 1-.768.64L8 8.781l-2.116 2.54a.5.5 0 0 1-.768-.641L7.349 8 5.116 5.32a.5.5 0 0 1 .064-.704z" />
                        <path d="M4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4zm0 1h8a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z" />
                    </svg>
                    EXCEL
                </button>
            </td>
        </tr>
    </table>
</form>

<div style="height: 15px; width:100%;">

</div>

<div id="divTabla">

</div>

@section Scripts {
    <script src="~/js/datatable.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/jqueryui.js"></script>
    <script src="~/js/sweetalert.js"></script>
    <script src="~/js/generic.js"></script>
    <script src="~/js/reportes.js"></script>
    <script>
        $(function () {
            $("#uiFechaInicio").datepicker({
                dateFormat: 'dd/mm/yy',
                changeYear: true
            });
        });

        $(function () {
            $("#uiFechaFin").datepicker({
                dateFormat: 'dd/mm/yy',
                changeYear: true
            });
        });
    </script>

}