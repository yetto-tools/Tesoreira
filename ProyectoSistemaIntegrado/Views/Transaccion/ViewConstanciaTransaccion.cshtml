@using CapaNegocio.Tesoreria;
@using CapaEntidad.Tesoreria;
@model TransaccionViewModel


@{
    Layout = null;
    TransaccionBL obj = new TransaccionBL();
    TransaccionCLS objTransaccion = obj.GetDataTransaccion(Model.CodigoTransaccion);
}

<!doctype html>
<html lang="es">
<head>
    <meta charset="utf-8">
</head>
<body>
    @*<table style="border-collapse: collapse; margin: 0 auto;">*@
    @{ var recurso = string.Empty; }
    <div>
        <table style="border-collapse: collapse; margin: 0 auto;">
            <tr>
                <td colspan="3">
                    VALE DE INGRESOS
                </td>
                <td>No. @objTransaccion.NumeroReciboStr</td>
            </tr>
            <tr style="border: 1px solid black;">
                <td style="width: 100px; border: 1px solid black;">FECHA</td>
                <td style="width: 250px; border: 1px solid black;"><div style="text-align: center;">@objTransaccion.FechaOperacionStr</div></td>
                <td style="width: 50px; border: 1px solid black;">HORA</td>
                <td style="width: 100px; border: 1px solid black;">@objTransaccion.HoraOperacionStr</td>
            </tr>
            <tr style="border: 1px solid black;">
                <td style="border: 1px solid black;">NOMBRE</td>
                <td style="border: 1px solid black;" colspan="3">@objTransaccion.NombreEntidad</td>
            </tr>
            <tr style="border: 1px solid black;">
                <td style="border: 1px solid black;">OPERACION</td>
                <td style="border: 1px solid black;">@objTransaccion.Operacion</td>
                <td style="border: 1px solid black;">RUTA</td>
                <td style="border: 1px solid black;">@objTransaccion.Ruta</td>
            </tr>
        </table>
        @*<table style="border: 1px solid black; border-collapse: collapse; margin: 0 auto;">*@
        <table style="border: 1px solid black; border-collapse: collapse;">
            <tr style="border: 1px solid black;">
                <td style="border: 1px solid black; width: 75px;"><div style="text-align: center;">CODIGO</div></td>
                <td style="border: 1px solid black; width: 200px;"><div style="text-align: center;">RECURSO</div></td>
                <td style="border: 1px solid black; width: 200px;"><div style="text-align: center;">BANCO</div></td>
                <td style="border: 1px solid black; width: 150px;"><div style="text-align: center;">BOLETA</div></td>
                <td style="border: 1px solid black; width: 100px;"><div style="text-align: center;">FACTURA</div></td>
                <td style="border: 1px solid black; width: 150px;"><div style="text-align: center;">MONTO</div></td>
            </tr>
            <tr style="border: 1px solid black;">
                <td style="border: 1px solid black;">@objTransaccion.CodigoEntidad</td>
                <td style="border: 1px solid black;">
                    @if (objTransaccion.Efectivo == 1) { recurso = "Efectivo,"; }
                    @if (objTransaccion.Deposito == 1) { recurso = recurso + "Deposito,"; }
                    @if (objTransaccion.Cheque == 1) { recurso = recurso + "Cheque"; }
                    @{ recurso = recurso.TrimEnd(','); }
                    <div style="text-align: left;">@recurso</div>
                </td>
                <td style="border: 1px solid black;"></td>
                <td style="border: 1px solid black;"></td>
                <td style="border: 1px solid black;">@objTransaccion.NumeroDocumento</td>
                <td style="border: 1px solid black;"><div style="text-align:right;">@objTransaccion.Monto</div></td>
            </tr>
            <tr style="border: 1px solid black;">
                <td style="border: 1px solid black;" colspan="4"></td>
                <td style="border: 1px solid black;">TOTAL</td>
                <td style="border: 1px solid black;"></td>
            </tr>
        </table>
    </div>
    
</body>
</html>